<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/enter_event_name"
        android:layout_width="@dimen/dimens_0_dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimens_16_dp"
        android:layout_marginTop="@dimen/dimens_24_dp"
        android:layout_marginEnd="@dimen/dimens_16_dp"
        android:background="@drawable/background_item_event"
        android:ems="10"
        android:hint="Введите название..."
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:paddingStart="@dimen/dimens_4_dp"
        android:paddingEnd="@dimen/dimens_4_dp"
        android:textColorHint="@color/dark_blue"
        android:textSize="@dimen/large_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/enter_event_description"
        android:layout_width="@dimen/dimens_0_dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimens_16_dp"
        android:layout_marginTop="@dimen/dimens_16_dp"
        android:layout_marginEnd="@dimen/dimens_16_dp"
        android:background="@drawable/background_item_event"
        android:ems="10"
        android:hint="Введите описание..."
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:paddingStart="@dimen/dimens_4_dp"
        android:paddingEnd="@dimen/dimens_4_dp"
        android:textColorHint="@color/dark_blue"
        android:textSize="@dimen/large_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enter_event_name" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/enter_event_date"
        android:layout_width="@dimen/dimens_0_dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimens_16_dp"
        android:layout_marginTop="@dimen/dimens_16_dp"
        android:layout_marginEnd="@dimen/dimens_16_dp"
        android:background="@drawable/background_item_event"
        android:ems="10"
        android:hint="Введите дату..."
        android:inputType="date"
        android:minHeight="48dp"
        android:paddingStart="@dimen/dimens_4_dp"
        android:paddingEnd="@dimen/dimens_4_dp"
        android:textColorHint="@color/dark_blue"
        android:textSize="@dimen/large_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enter_event_description" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/enter_event_location"
        android:layout_width="@dimen/dimens_0_dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimens_16_dp"
        android:layout_marginTop="@dimen/dimens_16_dp"
        android:layout_marginEnd="@dimen/dimens_16_dp"
        android:background="@drawable/background_item_event"
        android:ems="10"
        android:hint="Введите место встречи..."
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:paddingStart="@dimen/dimens_4_dp"
        android:paddingEnd="@dimen/dimens_4_dp"
        android:textColorHint="@color/dark_blue"
        android:textSize="@dimen/large_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enter_event_date" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/close_new_event"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_marginStart="@dimen/dimens_16_dp"
        android:layout_marginTop="@dimen/dimens_16_dp"
        android:background="@drawable/background_item_event"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enter_event_location"
        app:srcCompat="@drawable/ic_close"
        tools:ignore="SpeakableTextPresentCheck" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/add_new_event"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_marginTop="@dimen/dimens_16_dp"
        android:layout_marginEnd="@dimen/dimens_16_dp"
        android:background="@drawable/background_item_event"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enter_event_location"
        app:srcCompat="@drawable/ic_done"
        tools:ignore="SpeakableTextPresentCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>